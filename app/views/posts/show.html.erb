<<div class="authorName"><%= @post.author.name if @post.author %></div>
<a href="#" class="js-next" data-id="<%= @post.id %>">Next...</a>
<h1 class="postTitle"><%= @post.title %></h1>
<p class="postBody"><%= @post.description %></p>

 <script type="text/javascript" charset="utf-8">
$(function(){
  $(".js-next").on("click", function(){
    let nextId = parseInt($('.js-next').attr('data-id')) + 1;
    $.getJSON(`/posts/${nextId}/post_data`, function(json){
      $(".authorName").text(json["author"]["name"]);
      $(".postTitle").text(json["title"]);
      $(".postBody").text(json["description"]);
      // re-set the id to the current id on the link
      $(".js-next").attr("data-id", json["id"]);
    });
  });
});
</script>
